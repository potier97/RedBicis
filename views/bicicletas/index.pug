extends ../layout

block content
    a(href='/bicicletas/create') Nueva Bicicleta


    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicacion
                th(scope='col')
                th(scope='col')
        tbody
            each bici in bicis
                tr
                    td(scope='row') 
                        = bici.code
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a(href='bicicletas/update/' + bici.id) Editar
                    td
                        form.inline(method='post' action='bicicletas/delete/' + bici.code)
                            input(type='hidden' name='code' value=bici.code)
                            button.link-buttom(type='submit' name='submit_param' value='submit_value' class='btn')
                                = 'Eliminar'
                                